        "Type": "AWS::IAM::Role",
        "Properties": {
          "RoleName": {"Ref": "iamRoleNameAppServer"},
          "AssumeRolePolicyDocument": {
            "Version" : "2012-10-17",
            "Statement": [ {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }]
          },
          "ManagedPolicyArns": [ {"Ref": "appServerManagedPolicy"}],
          "Path": "/"
        },
        "DependsOn": ["appServerManagedPolicy"]
      },

