                "Resource": {"Fn::Join" : ["",["arn:aws:s3:::", {"Ref" : "resourcesBucketName"}]]}
              },
              {
                "Effect": "Allow",
                "Action": [
                    "s3:ListBucket",
                    "s3:GetBucketLocation",
                    "s3:GetObject"
